Bootstrap: localimage
From: deps.sif


%environment
    #export LC_ALL=C
    #. /opt/software/conda/bin/activate /opt/software/conda_env  #in deps. need do twice??
    . "$HOME/.cargo/env"

%files
    ../src /src/bascet/src
    ../Cargo.toml /src/bascet/Cargo.toml

%post
    SINGULARITY_SHELL=/bin/bash

    ### get bascet
    #git clone git@github.com:henriksson-lab/bascet.git
	#https://github.com/henriksson-lab/bascet

    ### build bascet    
    . "$HOME/.cargo/env"
    cd /src/bascet
    cargo +nightly build

    ### link bascet to where it should be    

    cp /src/bascet/target/debug/robert /bin/bascet

    #rm -Rf /src/bascet

%runscript
    exec "$@"
